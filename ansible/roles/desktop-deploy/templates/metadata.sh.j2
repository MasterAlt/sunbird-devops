#!/bin/bash

env_name={{environment_name}}
version={{installer_version}}
artifactFolder=$(find desktop_uploader_assets/* -type d)

# constructing the latest.json file
echo "{\"version\":\"${version}\",\"windows\":{\"32bit\":\"${env_name}_${version}_windows32bit.exe\",\"64bit\":\"${env_name}_${version}_windows64bit.exe\"},\"linux\":{\"64bit\":\"${env_name}_${version}_linux64bit.deb\"}}" | jq '.' | tee -a {{offline_repo_location}}/desktop_uploader_assets/${artifactFolder}/latest.json
